@model DayModel

<div class="modal fade" tabindex="1" id="modal-popup">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color: #007bff">@($"{Model.DayText} - {Model.MonthText}. {Model.Day}")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-control" style="border: 0">Total Sales : </div>
                        </div>
                        <div class="col-md-4">

                            <input type="number" 
                                class="form-control"
                                onkeypress="onchangeSales()" 
                                onkeyup="onchangeSales()" 
                                placeholder="Amount" 
                                id="txt-sales" />
                        </div>
                    </div>

                    <hr />
                    <div class="row mb-3">
                        <div class="col-md">       
                            <button class="button" style="float: right" onclick="addExpensesItem()">(-) Add Expenses</button>
                        </div>
                    </div>
                    <span id="expenses-container"></span>

                    <hr />
                    <div class="row mb-3">
                        <div class="col-md">
                            <button class="button" style="float: right" onclick="addCashItem()">(+) Additional Cash</button>
                        </div>
                    </div>
                    <span id="additional-cash-container"></span>
                </div>
            </div>

            <div class="modal-footer">
                <div style="width: 100%">
                    <span style="float: left; font-size: 18px; font-weight: 600; color: #6c757d">
                        Overall Sales : Php
                        <span style="font-size: 20px; color: #007bff" id="total-sales"></span>
                    </span>

                    <span style="float: right">
                        <button type="button" class="btn btn-primary" style="width: 80px" onclick="onclickSave()">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="width: 80px">Close</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#total-sales').html($('#txt-sales').val());
    });

    function onchangeSales() {
        $('#total-sales').html(convertToDecimalText($('#txt-sales').val()));
    }

    function onclickSave() {
        let obj = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        obj.BasedSales = $('#txt-sales').val();
        obj.TotalSales = $('#total-sales').html();

        GotoControllerAsync('/Home/SaveData', 'POST', obj, false, 'json', function (response) {

        });
    }

    function addExpensesItem() {
        GotoControllerAsync('/Home/_AdditionalItem', 'POST', { IsExpenses: true }, false, 'html', function (response) {
            $('#expenses-container').append(response);
        });
    }

    function addCashItem() {
        GotoControllerAsync('/Home/_AdditionalItem', 'POST', { IsExpenses: false }, false, 'html', function (response) {
            $('#additional-cash-container').append(response);
        });
    }
</script>